{
  "schemaVersion": 1,
  "id": "jeb",
  "version": "${version}",

  "name": "Just Enough Book",
  "description": "Improves your vanilla recipes book",
  "authors": ["Max Bel"],
  "contact": {
    "email": "rofumer@gmail.com"
  },

  "license": "All-Rights-Reserved",
  "icon": "assets/jeb/jeb.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "jeb.client.JEBClient"
